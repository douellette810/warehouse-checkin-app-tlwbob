
# ============================================================================
# SQL Server Configuration
# ============================================================================

# SQL Server instance name
# Format: SERVER_NAME\INSTANCE_NAME
# Example: CRSERV\SQLEXPRESS
DB_SERVER=CRSERV\\SQLEXPRESS

# SQL Server user
# For Windows Authentication, use: DOMAIN\\USERNAME
# For SQL Server Authentication, use: username
DB_USER=CRSERV\\Administrator

# SQL Server password
# For Windows Authentication, this may not be needed
# For SQL Server Authentication, enter the password
DB_PASSWORD=W1@3!-j/R

# Database name
# This is the name of your warehouse database
DB_DATABASE=WarehouseCheckIn

# Encryption settings
# Set to true if using Azure SQL or if encryption is required
DB_ENCRYPT=false

# Trust server certificate
# Set to true for local SQL Server instances
DB_TRUST_SERVER_CERTIFICATE=true

# ============================================================================
# API Server Configuration
# ============================================================================

# Port number for the API server
# Default: 3000
# Make sure this port is open in Windows Firewall
PORT=3000

# ============================================================================
# Optional: Logging Configuration
# ============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================================================
# Optional: Security Configuration
# ============================================================================

# JWT Secret (if implementing authentication)
# JWT_SECRET=your-secret-key-here

# API Key (if implementing API key authentication)
# API_KEY=your-api-key-here

